#!/bin/sh
# mostly modelled after github.com/neeasade/dotfiles/blob/master/bin/bin/elisp

pgrep emacs >/dev/null || exit 1

chk=1

[ "${1}" = -t ] && {
	trim=1
	shift
}

erun() {
	# This is probably next to useless since Emacs is unaware that a
	# client wants to connect when it is busy [1].  Emacsclient
	# supposedly has a builtin timeout but it is too long [2].
	# 1. https://lists.gnu.org/archive/html/bug-gnu-emacs/2021-09/msg02543.html
	# 2. https://lists.gnu.org/archive/html/bug-gnu-emacs/2021-09/msg02610.html
	if has timeout; then
		timeout 1 emacsclient --eval "${@}"
	else
		emacsclient --eval "${@}"
	fi
}

die() {
	[ -n "${f}" ] && [ ${chk} -eq 0 ] && rm -f "${f}"
	[ -n "${stdinf}" ] && [ -f "${stdinf}" ] && rm -f "${stdinf}"
	exit ${1:-0}
}

args() {
	args="'("
	for i in "${@}"; do
		args="${args} \"${i}\""
	done
	args="${args})"
}

[ -t 0 ] || {
	if [ "${1}" = '-' ]; then
		f=`mktemp` chk=0
		cat ->${f}
		shift
		args "${@}"
	else
		stdinf=`mktemp`
		cat ->${stdinf}
		stdin=\"${stdinf}\"
	fi

}

[ -f "${1}" ] && {
	f="${1}"
	shift
	args "${@}"
}

[ -z "${f}" ] && [ -n "${*}" ] && lisp="${*}"

res=`erun "${lisp:-"(vz/eval-file \"${f}\" ${stdin:-nil} ${args:-nil})"}"`
e=${?}

[ ${trim:-0} -eq 1 ] && {
	res=${res#[\"\(]}
	res=${res%[\"\)]}
}
echo "${res}" && die ${e}
