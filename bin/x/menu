#!/bin/sh

read -r sw sh <<EOF
$(res)
EOF

w=$((sw / 2))

l=$((sw / 50))
x=$((sw / 2 - w / 2))
y=$((sh / 3))

sel() {
	dmenu -x ${x} -y ${y} -w ${w} \
		  -fn "serif:pixelsize=16" \
		  -l ${l} -i \
		  -p "select:" ${@}
}

run() {
	$(echo "chromium
st
zathura
okular
screenshot
turnoff
record
session-desktop
subs" | sel -p "run:")
}

case ${1} in
sel)
	shift
	sel "${@}"
	;;
*)
	run
	;;
esac
