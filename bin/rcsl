#!/bin/dash
# script to recompile suckless software

base_dir="$HOME/usr/src/c"
sltools="dwm dmenu st tabbed"

compile() {
    cd ${base_dir}/${1}
    echo "compiling ${1}"
    make clean install && make clean
}

compl_all() {
    for sltool in $sltools; do
        compile $sltool
    done
}

[ $# -eq 0 ] && compl_all ||
    compile "$1"
